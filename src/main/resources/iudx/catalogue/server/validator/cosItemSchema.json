{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "CoS item schema",
    "description": "The root schema comprises the entire JSON document",
    "examples": [
        {
            "@context": "https://voc.iudx.org.in/",
            "type": [
                "iudx:COS"
            ],
            "id": "8b95ab80-2aaf-4636-a65e-7f2563d0d371",
            "name": "cos-kdmc.cop-nec.iudx.org.in",
            "description": "COS Smart Kalyan Dombivli Development Corporation Limited",
            "COS_URL": [
                "kdmc.cop-nec.iudx.org.in"
            ],
            "COS_UI": "https://catalogue.kdmc.cop-nec.iudx.org.in/"
        }
    ],
    "required": [
        "@context",
        "type",
        "name",
        "description",
        "COS_URL",
        "COS_UI"
    ],
    "properties": {
        "@context": {
            "$id": "#/properties/%40context",
            "type": "string",
            "title": "The @context schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "https://voc.iudx.org.in/"
            ]
        },
        "type": {
            "$id": "#/properties/type",
            "type": "array",
            "title": "The type schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                [
                    "iudx:ResourceServer"
                ]
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/type/items",
                "anyOf": [
                    {
                        "$id": "#/properties/type/items/anyOf/0",
                        "type": "string",
                        "title": "The first anyOf schema",
                        "description": "An explanation about the purpose of this instance.",
                        "default": "",
                        "examples": [
                            "iudx:ResourceServer"
                        ]
                    }
                ]
            }
        },
        "id": {
            "$id": "#/properties/id",
            "type": "string",
            "title": "The id schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "8b95ab80-2aaf-4636-a65e-7f2563d0d371"
            ],
            "maxLength": 36,
            "pattern": "^[a-zA-Z0-9]{8}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{12}$"
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The name schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "cos-kdmc.cop-nec.iudx.org.in"
            ],
            "pattern": "^[a-zA-Z0-9-]([\\w-.]*[a-zA-Z0-9-])?$"
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The description schema",
            "description": "An explanation about the purpose of this resource server.",
            "default": "",
            "examples": [
                "Multi tenanted IUDX resource server"
            ]
        },
        "COS_URL": {
            "$id": "#/properties/COS_URL",
            "type": "array",
            "title": "The cos-url schema",
            "description": "COS_URL is an array of urls for the city operating system",
            "default": [],
            "examples": [
                [
                    "kdmc.cop-nec.iudx.org.in"
                ]
            ],
            "items": {
                "$id": "#/properties/COS_URL/items",
                "anyOf": [
                    {
                        "$id": "#/properties/COS_URL/items/anyOf/0",
                        "type": "string",
                        "title": "the cos-url schema",
                        "default": "",
                        "examples": [
                            "kdmc.cop-nec.iudx.org.in"
                        ],
                        "pattern": "^[a-zA-Z0-9-]{2,}(\\.[a-zA-Z0-9-\/]{2,}){1,5}$"
                    }
                ]
            }
        },
        "COS_UI": {
            "$id": "#/properties/COS_UI",
            "type": "string",
            "title": "the cos-ui schema",
            "default": "",
            "description": "The url for the user interface of the cos",
            "examples": [
                "https://catalogue.kdmc.cop-nec.iudx.org.in/"
            ],
            "pattern": "^https://[a-zA-Z0-9-]{2,}(\\.[a-zA-Z0-9-\/]{2,}){1,5}$"
        }
    }
}